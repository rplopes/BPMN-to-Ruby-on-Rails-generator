.group
  = f.label :name, t("activerecord.attributes.supplier.name", :default => "Name"), :class => :label
  = f.text_field :name, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :address, t("activerecord.attributes.supplier.address", :default => "Address"), :class => :label
  = f.text_field :address, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :city_id, t("activerecord.attributes.supplier.city_id", :default => "City"), :class => :label
  = select("supplier", "city_id", City.all.collect {|p| [ p.to_string, p.id ] })
  %span.description Ex: a simple text
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), suppliers_path, :class => "text_button_padding link_button"
